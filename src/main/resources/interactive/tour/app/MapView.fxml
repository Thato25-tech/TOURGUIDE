<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="interactive.tour.app.MapController">
    <top>
        <Text text="Lesotho Interactive Map" style="-fx-font-size: 24px; -fx-padding: 20px;"/>
    </top>
    
    <center>
        <Pane>
            <ImageView fx:id="mapView" fitWidth="800" fitHeight="600" preserveRatio="true"/>
            <Pane fx:id="markerPane" prefWidth="800" prefHeight="600"/>
        </Pane>
    </center>
    
    <bottom>
        <Button fx:id="btnBack" text="Back to Home" style="-fx-padding: 10px; -fx-margin: 20px;"/>
    </bottom>
</BorderPane> 