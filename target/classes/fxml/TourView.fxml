<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="20" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="interactive.tour.app.TourController">
    <Label text="Interactive Tour" styleClass="title-label"/>
    
    <VBox fx:id="tourContent" spacing="10" alignment="CENTER">
        <Label fx:id="tourDescription" wrapText="true"/>
        <Button fx:id="nextButton" text="Next" onAction="#nextStop" styleClass="action-button"/>
    </VBox>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Back to Home" onAction="#backToHome" styleClass="action-button"/>
        <Button text="View Map" onAction="#viewMap" styleClass="action-button"/>
    </HBox>
</VBox> 